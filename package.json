{
  "name": "backlog-mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol server for interacting with the Backlog project management platform.",
  "license": "Apache-2.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "test": "jest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/__tests__"],
    "moduleFileExtensions": ["ts", "tsx", "js", "json"],
    "collectCoverageFrom": ["src/**/*.ts"],
    "coveragePathIgnorePatterns": ["/node_modules/", "<rootDir>/dist/"]
  }
}
